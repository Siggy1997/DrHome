<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.drhome.appointment.AppointmentDAO">

	<select id="hospitals" parameterType="Map" resultType="Map">
		SELECT * FROM hospital
	</select>
	
	<select id="hospital" parameterType="Integer" resultType="Map">
		SELECT * FROM hospital WHERE hno=#{hno}
	</select>

	<select id="doctor" parameterType="Map" resultType="Map">
		SELECT * FROM doctor
	</select>

<!-- 	<select id="doctorDp" parameterType="Integer" resultType="Map">
		SELECT dname
		FROM doctor
		WHERE dpno = #{dpno}
	</select> -->

	<select id="getDoctorsByDpno" parameterType="Integer" resultType="Map">
		SELECT *
		FROM doctor
		WHERE dpno=#{dpno}
	</select>

	<select id="department" parameterType="Integer" resultType="Map">
		SELECT *
		FROM department
	</select>

</mapper>